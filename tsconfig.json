      "./testChatbot/node_modules/*",
      "./Pogy/*",
      "./Guilded-Discord-Bridge/*",
      "./nextjs-mui-frontend/*",
      "./mfm.js/*",
      "./node_modules/**",
      "./testChatbot/node_modules/**",
      "./Pogy/**",
      "./Guilded-Discord-Bridge/**",
      "./nextjs-mui-frontend/**",
      "./mfm.js/**",
      // // // // // // // // // //
      "./sourceRefs",
      "./sourceRefs/",
      "./sourceRefs/*",
      "./sourceRefs/**",
      "./static/"
   ]

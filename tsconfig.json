   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2021"
      ],
      "target": "ESNext",
      "module": "UMD",
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "declaration": true,
      "allowJs": true,
      "strict": false
   },
   "include": [
      "./index.ts",
      "./src/"
   ],
